<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luanchscreen"
    tools:context=".ComplainsActivity">
    <TextView
        android:id="@+id/complainTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:text="Complain"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="595dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complainTitle">

    <EditText
        android:id="@+id/complainTextArea"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/profile_input_design"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:hint="Enter your complain here..."
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:textColor="@color/secondary"
        android:textColorHint="@color/bg_grey" />
    <Button
        android:id="@+id/registerComplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>